    "version": "0.2.0",
    "configurations": [
        {
            "name": "GO Forest",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            // growforest -train iris.data.fm -target C:Class -selftest -nTrees 100 -nCores 16
            "program": "cmd/growforest/growforest.go",
            "cwd": "${workspaceRoot}",
            "args": [
                "-train", "./data/iris.data.fm",
                "-save", "./work/forest/iris.model.sf",
                "-target", "C:Class",
                "-trees", "100",
                "-oob",
                "-cpuprofile", "./work/forest/iris.prof",
                "-importance", "./work/forest/iris.importance",
                "-oobpreds", "./work/forest/iris.oob",
                "-selftest",
                // "-cores", "16"
            ]
        }
    ]
}